{% extends "base.jinja" %}

{% block header %}
  <h1>{% block title %} Пошук {% endblock %}</h1>
{% endblock %}

{% block content %}
<article class="post">
    <form method="post">
    <table>
        <thead>
            <tr>
                <th>Поле</th>
                <th>Значення</th>
            </tr>
        </thead>
        <tr>
            <th><label><input name="field" type="hidden" value="all"></label>По всіх полях</th>
            <th><label><input name="value"></label></th>
        </tr>
        {% for field in fields %}
          <tr>
            <th><label><input name="field" value="{{ field }}"></label></th>
            <th><label><input name="value"></label></th>
          </tr>
        {% endfor %}
    </table>
    <input type="submit" value="Пошук">
    </form>
</article>
{% endblock %}